datasource db {
  provider = "sqlite" // Use postgresql, mysql, etc. as needed
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Camera {
  id       Int       @id @default(autoincrement())
  name     String
  location String
  incidents Incident[]
}

model Incident {
  id           Int      @id @default(autoincrement())
  cameraId     Int
  type         String
  tsStart      DateTime
  tsEnd        DateTime
  thumbnailUrl String
  resolved     Boolean  @default(false)
  camera       Camera   @relation(fields: [cameraId], references: [id])
}
